{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "types": ["@testing-library/jest-native", "jest"],
    "baseUrl": ".",
    "paths": {
      "*": ["*"],
      "@_tests/*": ["src/tests/*"],
      "@_components/*": ["src/components/*"],
      "@_types/*": ["src/types/*"],
      "@_services/*": ["src/services/*"]
    },
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  }
}
